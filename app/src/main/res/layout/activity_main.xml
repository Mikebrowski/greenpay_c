<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#34A853"
        android:fontFamily="@font/aldrich"
        android:soundEffectsEnabled="false"
        android:text="Green Pay"
        android:textAlignment="center"
        android:textColor="#0FFFFF"
        android:textColorLink="#0FFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifAnimation"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:src="@drawable/planet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Created by knowit"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="#34A853"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="251dp"
        android:layout_height="187dp"
        app:layout_constraintBottom_toTopOf="@+id/toolbar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifAnimation">

        <Button
            android:id="@+id/insideLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:backgroundTint="#B08249"
            android:drawableTop="@drawable/ic_baseline_login_24"
            android:onClick="loginActivity"
            android:text="Login"
            android:textColor="#00FFFF"
            android:textSize="20dp"
            app:icon="@drawable/ic_baseline_login_24"
            app:layout_column="0"
            app:layout_row="1"
            tools:layout_editor_absoluteX="90dp"
            tools:layout_editor_absoluteY="696dp" />

        <Button
            android:id="@+id/regButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="registerWindow"
            android:text="Registrer"

            android:backgroundTint="#B08249"
            android:drawableTop="@drawable/ic_baseline_how_to_reg_24"
            android:textSize="20sp"
            app:icon="@drawable/ic_baseline_how_to_reg_24"
            app:layout_column="0"
            app:layout_row="2"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="715dp" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>